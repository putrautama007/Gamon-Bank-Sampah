<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.transaksi.TarikActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white">

        <ImageView
            android:id="@+id/back_tarik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_24dp"/>

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="@string/tarik_saldo"
            android:textColor="@android:color/white"
            android:textStyle="normal" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/backgroumd_round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1.3sp"
                android:text="Nama :"
                android:textColor="@color/greyish"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/nama_user_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:text="John Doe"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1.3sp"
                android:text="Tanggal menjadi nasabah :"
                android:textColor="@color/greyish"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tgl_bergabung_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:text="10 Oktober 2018"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1.3sp"
                android:text="Total Saldo :"
                android:textColor="@color/greyish"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/total_saldo_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:text="Rp. 30000,-"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:text="Jumlah saldo yang ditarik* :"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1.3sp"
                android:text="*minimal sekali penarikan Rp. 10.000"
                android:textColor="@color/greyish"
                android:textSize="14sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/input_transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="150dp"
                android:background="@drawable/search_border"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />


            <Button
                android:id="@+id/btn_tarik_saldo"
                android:layout_marginTop="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_with_border"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:gravity="center"
                android:text="@string/ambil_tabungan"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>