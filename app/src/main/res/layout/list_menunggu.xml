<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_menunggu"
        android:elevation="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:background="@drawable/backgroumd_round"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nama_user_menunggu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="2.7sp"
                    android:text="Amaris Anne"
                    />

                <TextView
                    android:id="@+id/tgl_menunggu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="20dp"
                    android:textStyle="normal"
                    android:textColor="@color/greyish"
                    android:lineSpacingExtra="1.3sp"
                    android:text="02 Agustus 2018"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1.5"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_terima"
                    android:elevation="8dp"
                    android:background="@drawable/backgroumd_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/tree_green"
                    android:text="@string/terima"/>

                <Button
                    android:id="@+id/btn_tolak"
                    android:elevation="8dp"
                    android:textColor="@color/orange_red"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/backgroumd_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tolak"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>